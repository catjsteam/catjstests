{
    "name": "angularjs-test",

    "source": "src/",
    "target": "target/",
    "cattarget": "./",
    "jshint": {
        "opt": {
            "evil": true,
            "strict": false,
            "curly": true,
            "eqeqeq": true,
            "immed": false,
            "latedef": true,
            "newcap": false,
            "noarg": true,
            "sub": true,
            "undef": true,
            "boss": true,
            "eqnull": true,
            "node": true,
            "es5": false
        },
        "globals": {
            "my": true
        }
    },

    "host": "localhost",
    "port": "8080",
    "protocol": "http",
    "analytics" : "N",
    "apppath": "./..",
    "appserver": {
        "host": "localhost",
        "port": "8080",
        "protocol": "http"
    },

    "plugins": [
        {
            "name": "pserver",
            "type": "webserver",
            "port": "8081",
            "path" : "./..",
            "action": "start"
        }
    ],

    "tasks": [
        {
            "name": "server",
            "plugins":["pserver"]
        }
    ]

}
